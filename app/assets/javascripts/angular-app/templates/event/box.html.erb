<md-sidenav class="md-whiteframe-z2 md-event" md-component-id="event">
  <md-toolbar layout="row">
    <div ng-hide="user.signedIn" class="md-toolbar-tools">
      <span>{{currentEvent.name}}</span>
      <span flex></span>

      <md-button md-no-ink ng-click="closeMenu()" class="md-icon-button" aria-label="Close">
        <md-icon md-svg-icon="assets/svg/md-chevron.svg"></md-icon>
      </md-button>
    </div>
  </md-toolbar>

  <md-content>
    <div>
      <img ng-src="{{currentEvent.logo}}" class="md-event-image" alt="Event hero">
    </div>

    <div>
      <p>{{currentEvent.description}}</p>
    </div>

    <div>
      <h4>Disabled date-picker</h4>
      <md-datepicker ng-model="currentEvent.start_date" md-placeholder="Enter date" disabled></md-datepicker>
      <md-datepicker ng-model="currentEvent.end_date" md-placeholder="Enter date" disabled></md-datepicker>
    </div>

    <div>
      <h4>Capacity: {{currentEvent.capacity}}</h4>
      <h4>Status: {{currentEvent.status}}</h4>
    </div>

    <div>
      <md-button ng-href="{{currentEvent.url}}" target="_blank">Get Tickets!</md-button>
    </div>

  </md-content>

</md-sidenav>