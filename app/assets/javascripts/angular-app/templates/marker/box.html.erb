<md-whiteframe class="md-whiteframe-z2 md-legend" flex="30" layout-padding layout="column">

  <div class="md-searchbox ">
    <div layout="row" role="listbox" class="md-whiteframe-z1 md-searchbox-wrap">
      <input type="text" placeholder="Search an event..." ng-model="searchMarker">
    </div>
  </div>
    
  <div class="md-legend-list md-no-ink">
    <md-list>
      <md-list-item class="md-3-line" ng-repeat="marker in markers | filter:searchMarker"
                            ng-click="showMarker(marker)">
        <div class="md-list-item-text" layout="column">
          <h3>{{marker.name}}</h3>
          <p>{{marker.description | limitTo:64}}{{ marker.description.length > 64? "..." : ""}}</p>
        </div>
        <md-divider></md-divider>

      </md-list-item>
    </md-list>
  </div>
</md-whiteframe>